            <class name="org.wso2.carbon.identity.authz.spicedb.handler.model.ReturnedCheckRequestTest"/>
            <class name="org.wso2.carbon.identity.authz.spicedb.handler.model.ResourceTest"/>
            <class name="org.wso2.carbon.identity.authz.spicedb.handler.model.SubjectTest"/>
